<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CalorieCalculateActivity"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/textView23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/pretendard_bold"
        android:padding="10dp"
        android:text="권장 칼로리 계산"
        android:layout_marginTop="20dp"
        android:textSize="20dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:fontFamily="@font/pretendard_semi_bold"
                android:text="키(cm):"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextNumber2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/edge2"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:fontFamily="@font/pretendard_semi_bold"
                android:text="체중(kg):"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextNumber3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/edge2"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/pretendard_bold"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:text="활동량"
        android:layout_marginBottom="10dp"
        android:textSize="16sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp">

        <RadioButton
            android:id="@+id/salty1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:fontFamily="@font/pretendard_regular"
            android:layout_weight="1"
            android:background="@drawable/radio_button_left_selector"
            android:textAlignment="center"
            android:button="@null"
            android:text="적은 편" />

        <RadioButton
            android:id="@+id/salty2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="13sp"
            android:layout_weight="1"
            android:background="@drawable/radio_button_middle_selector"
            android:button="@null"
            android:textAlignment="center"
            android:text="보통" />

        <RadioButton
            android:id="@+id/salty3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:fontFamily="@font/pretendard_regular"
            android:layout_weight="1"
            android:checked="true"
            android:background="@drawable/radio_button_middle_selector"
            android:textAlignment="center"
            android:button="@null"
            android:text="보통 이상" />

        <RadioButton
            android:id="@+id/salty4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="13sp"
            android:layout_weight="1"
            android:background="@drawable/radio_button_middle_selector"
            android:textAlignment="center"
            android:button="@null"
            android:text="많은 편" />



    </RadioGroup>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/black_green"/>

    <TextView
        android:id="@+id/textView28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/pretendard_light"
        android:text="*권장 칼로리는 아래 계산식에 의해 계산됩니다."
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/textView29"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pretendard_light"
        android:text="*하루 권장 칼로리 = (키-100) x 0.9 x (활동 지수)"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/textView30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pretendard_light"
        android:text="*활동 지수: 적은 편(25), 보통(30), 보통 이상(35), 많은 편(40)"
        android:textSize="15dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp">

        <Button
            android:id="@+id/customSaveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="50dp"
            android:text="저장"
            android:fontFamily="@font/pretendard_semi_bold"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/customCancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:text="취소"
            android:textAlignment="center"
            android:fontFamily="@font/pretendard_semi_bold"
            app:layout_constraintBottom_toBottomOf="@+id/customSaveBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/customSaveBtn" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>