<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/goalValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/pretendard_bold"
        android:padding="10dp"
        android:text="목표값 입력"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/kcal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/pretendard_semi_bold"
                android:padding="5dp"
                android:text="목표 Kcal"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/goalKcalInput"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="35dp"
                android:layout_weight="1"
                android:background="@drawable/edge2"
                android:ems="10"
                android:fontFamily="@font/pretendard_regular"
                android:hint="1900"
                android:inputType="number"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/calbohydrate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/pretendard_semi_bold"
                android:padding="5dp"
                android:text="탄수화물(g)"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/goalCalboInput"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/edge2"
                android:ems="10"
                android:fontFamily="@font/pretendard_regular"
                android:hint="324"
                android:inputType="number"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/protein"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/pretendard_semi_bold"
                android:padding="5dp"
                android:text="단백질(g)"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/goalProteinInput"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="33dp"
                android:layout_weight="1"
                android:background="@drawable/edge2"
                android:ems="10"
                android:fontFamily="@font/pretendard_regular"
                android:hint="55"
                android:inputType="number"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/pretendard_semi_bold"
                android:padding="5dp"
                android:text="지방(g)"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/goalFatInput"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="47dp"
                android:layout_weight="1"
                android:background="@drawable/edge2"
                android:ems="10"
                android:fontFamily="@font/pretendard_regular"
                android:hint="54"
                android:inputType="number"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sugar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/pretendard_semi_bold"
                android:padding="5dp"
                android:text="당류(g)"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/goalSugarInput"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="47dp"
                android:layout_weight="1"
                android:background="@drawable/edge2"
                android:ems="10"
                android:fontFamily="@font/pretendard_regular"
                android:hint="100"
                android:inputType="number"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sodium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/pretendard_semi_bold"
                android:padding="5dp"
                android:text="나트륨(mg)"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/goalSodiumInput"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/edge2"
                android:ems="10"
                android:fontFamily="@font/pretendard_regular"
                android:hint="2000"
                android:inputType="number"
                android:textAlignment="center" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pretendard_light"
        android:padding="10dp"
        android:text="* 입력부분에 보여지는 값은 1일 영양성분 기준치입니다." />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:padding="10dp">

        <Button
            android:id="@+id/customSaveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:fontFamily="@font/pretendard_semi_bold"
            android:text="저장"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/customCancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="45dp"
            android:fontFamily="@font/pretendard_semi_bold"
            android:text="취소"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/customSaveBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/customSaveBtn"
            tools:layout_editor_absoluteY="47dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>